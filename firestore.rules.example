// Firestore Security Rules for Kokebok v4.0
// Copy these rules to your Firebase Console -> Firestore Database -> Rules

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // User's private data (recipes, books, categories, settings)
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Public profiles - readable by anyone, writable only by owner
    match /publicProfiles/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Friend requests - readable by sender or recipient
    match /friendRequests/{requestId} {
      allow read: if request.auth != null && 
        (resource.data.fromUid == request.auth.uid || resource.data.toUid == request.auth.uid);
      allow create: if request.auth != null && request.resource.data.fromUid == request.auth.uid;
      allow update: if request.auth != null && 
        (resource.data.fromUid == request.auth.uid || resource.data.toUid == request.auth.uid);
      allow delete: if request.auth != null && resource.data.fromUid == request.auth.uid;
    }
    
    // Shared recipes - readable by recipient, writable by sender or recipient
    match /sharedRecipes/{shareId} {
      allow read: if request.auth != null && 
        (resource.data.fromUid == request.auth.uid || resource.data.toUid == request.auth.uid);
      allow create: if request.auth != null && request.resource.data.fromUid == request.auth.uid;
      allow update: if request.auth != null && resource.data.toUid == request.auth.uid;
      allow delete: if request.auth != null && 
        (resource.data.fromUid == request.auth.uid || resource.data.toUid == request.auth.uid);
    }
  }
}
